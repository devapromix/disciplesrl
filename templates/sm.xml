<?xml version="1.0" encoding="utf-8" ?>

<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="sm" surround="true" invoke="manual">
		<point name="txt">
			<script language="Delphi">
				InvokeCodeCompletion;
			</script>
			<hint>
				text value 
			</hint>
			<text>
				Text
			</text>
		</point>
		<description>
			ShowMessage()
		</description>
		<author>
			Apromix
		</author>
		<code language="Delphi" context="methodbody" delimiter="|"><![CDATA[ShowMessage('|txt|');]]>
		</code>
	</template>
</codetemplate>
